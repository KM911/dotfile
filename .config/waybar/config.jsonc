        "format-alt": "ï„³  {:%Y/%m/%d ï€— %H:%M:%S}",
        "interval": 60
    },
    "custom/sunset": {
        "interval": "once",
        "tooltip": true,
        "return-type": "json",
        "format": "{icon}",
        "format-icons": {
            "on": "ğŸŒ ",
            "off": "ğŸŒˆ"
