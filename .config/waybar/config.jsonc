// Waybar configuration
// Configuration reference: https://github.com/Alexays/Waybar/wiki/Configuration
{
    "layer": "top",
    "height": 30,
    "position": "top",
    "modules-left": [
        "cpu",
        "temperature",
        "custom/gpu",
        "memory",
        "tray",
        "custom/sunset",
        "custom/scratchpad",
        "custom/playerctl",
        "network"
    ],
    "modules-center": [
        "sway/workspaces"
    ],
    "modules-right": [
        "custom/weather",
        "pulseaudio",
        "custom/bluetooth-battery",
        "backlight",
        "battery",
        "clock"
    ],
    "sway/workspaces": {
        "format": "{name}"
    },
    "battery": {
        "interval": 30,
        "states": {
            "warning": 30,
            "critical": 15
        },
        "format-charging": "ó°‚„ {capacity}%",
        "format": "{icon} {capacity}%",
        "format-icons": [
