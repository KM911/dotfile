        "exec": "fallback_latitude=50.1 fallback_longitude=8.7 latitude= longitude= ~/.config/sway/scripts/sunset.sh",
        "on-click": "~/.config/sway/scripts/sunset.sh toggle",
        "exec-if": "~/.config/sway/scripts/sunset.sh check",
        "signal": 6
    },
    "cpu": {
        "interval": 10,
